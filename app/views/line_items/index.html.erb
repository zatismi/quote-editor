<div class="container-fluid d-flex flex-wrap justify-content-between align-items-center text-center col-9 my-4 mt-5">
  <% if @line_item_date.line_items.any? %>
    <% @line_item_date.line_items.each do |line_item| %>
      <%= link_to quote_line_item_date_line_item_path(@quote, @line_item_date, line_item), class: 'card col-12 col-sm-12 col-md-6 col-l-6 col-lg-4 border-0 p-2' do %>
        <div class="card-img-container position-relative" style="overflow: hidden;">
          <%= render 'shared/product_tag', line_item: line_item %>
          <%= render 'shared/product_special_info', line_item: line_item %>
          <img class="card-img-top" src="https://cdn.pixabay.com/photo/2024/02/06/18/10/ai-generated-8557635_1280.jpg" alt="T-Shirt Image">
        </div>
        <div class="card-body" style="background-color: white;">
          <h6 class="card-title"><%= line_item.name %></h6>
          <p class="card-text text-secondary"><%= line_item.description.truncate(80) %></p>
          <p class="card-text"><%= number_to_currency(line_item.unit_price, unit: "â‚¬", format: "%n %u", separator: ",", delimiter: ".") %></p>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>No Products yet!</p>
  <% end %>
</div>

<style>
  .card-img-container {
    overflow: hidden; /* Hide overflow */
  }
  .card-img-top {
      transition: transform 0.6s ease; /* Smooth transition for scaling */
  }
  .card:hover .card-img-top {
      transform: scale(1.05); /* Scale image when the card is hovered */
  }
  .card-img-container:hover .card-img-top {
    transform: scale(1.05);
  }
</style>
