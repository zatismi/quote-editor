<%# Step 1: Clear the Turbo Frame containing the form %>
<%= turbo_stream.update nested_dom_id(@line_item_date, LineItem.new), "" %>
<%# Step 2: Append the new line item to the list of items %>
<%= turbo_stream.append nested_dom_id(@line_item_date, "line_items") do %>
  <%= render @line_item, quote: @quote, line_item_date: @line_item_date %>
<% end %>
<%# Step 3: Display flash messages %>
<%= render_turbo_stream_flash_messages %>
<%= turbo_stream.update "single_quote" do %>
  <%= render "quotes/xshow" %>
<% end %>
