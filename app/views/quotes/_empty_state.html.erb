<div class="empty-state d-flex flex-column justify-content-center align-items-center">
  <section class="col-8 p-5 d-flex flex-column align-items-center" style="border: 2px dashed rgba(220, 220, 220, 0.297); border-radius: 20px">
    <p>Create Your First Quote Now 🕺🏻</p>
    <%= link_to new_quote_path,
                class: "addnewquote",
                data: { turbo_frame: dom_id(Quote.new) } do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="gray" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z"/>
      </svg>
      <style>
        .addnewquote svg {
          transition: fill 0.3s ease-in-out;
        }
        .addnewquote:hover svg {
          fill: rgba(5, 177, 82, 0.521);
        }
      </style>
    <% end %>
  </section>

</div>
