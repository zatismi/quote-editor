<%# https://getbootstrap.com/docs/5.3/components/toasts/#options %>

<div class="toast-container position-fixed bottom-0 start-50 translate-middle-x p-3" data-controller="toast">
  <% flash.each do |flash_type, message| %>
      <div class="toast align-items-center text-bg-<%= flash_type == 'notice' ? 'primary' : 'danger' %> fade show" role="alert" aria-live="assertive" aria-atomic="true" data-toast-target="toast>
        <div class="d-flex bg-warning text-black">
          <div class="toast-body">
            <%= message %>
          </div>
          <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
  <% end %>
</div>
