<header class="d-flex flex-row align-items-center justify-content-between p-2 px-4 bg-dark text-white">
  <% if user_signed_in? %>
    <h3>
      <%= content_tag(:span, current_company.name) %>
    </h3>
    <div class="navbar justify-content-end">

      <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="m-2"><%= "Welcome #{current_user.name}" %></span>
        </button>
        <ul class="dropdown-menu">
          <li>
            <button class="dropdown-item">
                  Settings
            </button>
          </li>
          <li>
                  <%= button_to "Sign out",
                    destroy_user_session_path,
                    method: :delete,
                    class: "dropdown-item" %>
          </li>
        </ul>
      </div>

      <% else %>
      <div class="d-flex flex-row">
        <img
            src="https://www.thedownsizinginstitute.com/wp-content/uploads/2022/09/orange-quotation-marks-png-7-1030x773-1.png"
            alt="quote logo"
            style="height: 30px; width: auto;"
            >
        <h3 class="ms-1">Welcome to Quotes</h3>
      </div>
      <div>
        <%= link_to "Sign in",
                  new_user_session_path,
                  class: "btn btn-success"%>
      <% end %>
    </div>

    </div>

</header>
